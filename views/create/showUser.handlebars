
<ul class="user-list">
  <h1>Lista de usuários:</h1>
  {{#each user}}
  <li class="user-li-list">
   <span>Nome:</span> <label for="name">{{this.name}}</label> <br>  
    <span>E-mail:</span><label for="email">{{this.email}}</label> <br>
    <span>Profissão:</span><label for="job">{{this.job}}</label>  
  </li>
  <div class="show-buttons">
     <form action="/user/remove" method="POST">
    <input type="hidden" name="idUser" value="{{this.id}}">
    <button type="submit" class="btn-red">Excluir</button>
  </form>
  
   <form action="/user/edit" method="POST">
    <input type="hidden" name="idUser" value="{{this.id}}">
    <button type="submit" class="btn-red"> <a href="/user/edit{{this.id}}">Editar</a></button>
  </form>
  </div>
 
    
  {{/each}}
</ul>

